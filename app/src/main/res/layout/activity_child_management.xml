<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Child Details Form -->
        <EditText
            android:id="@+id/et_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/input_background" />

        <EditText
            android:id="@+id/et_child_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Age"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_child_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Health Records"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_child_admission_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admission Date (YYYY-MM-DD)"
            android:inputType="date"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_child_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education Status"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginTop="8dp" />




        <!-- Buttons -->
        <Button
            android:id="@+id/btn_save_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_delete_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
